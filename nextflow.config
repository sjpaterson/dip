params {
    obsdir = '/astro/mwasci/user/observations'
    mosaicdir = '/astro/mwasci/user/mosaic'
    reportCsv = '/astro/mwasci/user/dip/dip_report.csv'
    briggs = '0.3'
    tukey = '875'
}

process {
    container = '/astro/mwasci/user/containers/gleamx.img'
    containerOptions = '--bind /astro/mwasci/user,/astro/mwasci/asvo,/astro/mwasci/user:/home/user,/nvmetmp'
    stageInMode = 'copy'
    scratch = '/nvmetmp'
    executor = 'slurm'
    queueSize = 150
    errorStrategy = 'ignore'
    cpus = 24
    memory = '50G'
    clusterOptions = '--tmp=50g'
    beforeScript = 'module load singularity'

    withLabel: 'racstools' {
        container = '/astro/mwasci/user/containers/racstools_latest.sif'
    }
}

singularity.enabled = true

